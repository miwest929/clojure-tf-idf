extends layout

block body
  div(ng-controller='HomeCtrl').container
    h1
      | TF-IDF VISUALIZER
    div.row
      div.span4
        ul.unstyled
          li
            div.row
              a(ng-click="loadOverview()")
                | Overview
          li
            div.row
              form(role="form").form-inline
                button(type="button", ng-click="addWikiArticle()").btn.btn-default.add-article-btn
                  i.fa.fa-plus
                input.form-control(ng-model="wikiArticleName")
          li(ng-repeat='article in articles')
            div(ng-click="select($index)", ng-class="{selectBackground: $index == selected}").row.article-item
              a(ng-click="loadArticle(article.id, article.title)", ng-class="{sel: $index == selected}").pointer
                | {{article.title}}
      div.span4(ui-view)

  script(src='js/lib/angular/angular.js')
  script(src='http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/directives.js')
  script(src='http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js')
  script(src='/bootstrap/js/bootstrap.min.js')
