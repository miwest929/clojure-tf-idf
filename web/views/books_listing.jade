div(ng-controller='BooksCtrl')
  ul.unstyled
    li(ng-repeat='book in books')
      div.row
        div.col-xs-4.book_content
          span.book_name
            {{book.title}}
          progress(max='{{book.total_pages}}', value='{{book.pagesRead}}')
        div.form-group.col-xs-3
          form(role="form").form-inline
            input(type='text', ng-model='pages_read')
            button(ng-click='updateReadPages(book, pages_read)').btn.btn-primary.form-control
              | Record reading
    li
      div
        form(role="form").form-inline
          input(type="text", ng-model='title')
          input(type="text", ng-model='totalPages')
          button(ng-click='addBook(title, totalPages)').btn.btn-primary.form-control
            | Add Book
